<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book|%>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <% @books.each do |book| %>
  <tr>
    <td></td>
  </tr>
  <% end %>
</table>

<h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
<% if @book.errors.any? %>
<%= @book.errors.count %>error
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  </br>
  <%= f.submit 'Create Book' %>
<% end %>