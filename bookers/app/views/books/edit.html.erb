<h3>Editing Book</h3>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<% if @book.errors.any? %>
<%= @book.errors.count %>error
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>
<h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  </br>
  <%= f.submit 'Update Book' %>
  </br>
  <span><%= link_to 'Show', book_path(@book) %></span>
  <span>|</span>
  <span><%= link_to "Back", books_path %></span>
  <div class="author-case"></div>
<% end %>
